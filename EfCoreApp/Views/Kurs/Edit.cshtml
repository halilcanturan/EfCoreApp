@model KursViewModel

<h2>Kurs Bilgileri Güncelleme</h2>
<hr />
<div class="row">
    <div class="col-8">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="All"></div>
            <input type="hidden" asp-for="KursId" /> @* Edit ekranına kurs bilgilerini çekmek için kullanıyoruz. *@
            <div class="mb-3">
                <label asp-for="Baslik" class="form-label">Kurs Başlık</label>
                <input asp-for="Baslik" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="OgretmenId" class="form-label">Öğretmen</label>
                <select asp-for="OgretmenId" asp-items="ViewBag.Ogretmenler" class="form-select">
                    <option value="">Seçiniz</option>
                </select>
            </div>

            <button type="submit" class="btn btn-secondary">Güncelle</button>
        </form>

    </div>
    <div class="col-4">
        <h4>Öğrenciler</h4>
        <hr />
        <ul>
            @foreach (var item in @Model.KursKayitlari)
            {
                <li>@item.Ogrenci.AdSoyad</li>
            }
        </ul>
    </div>
</div>